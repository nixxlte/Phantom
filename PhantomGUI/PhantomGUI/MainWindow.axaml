<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhantomGUI"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="PhantomGUI.MainWindow"
        x:DataType="local:MainWindowViewModel"
        Title="PhantomGUI">
	<StackPanel>
		<TextBlock FontSize="12">
			<Run Text="PC: "/>
			<Run Text="{Binding pcNAME}"/>
			<Run Text="| Build"/>
			<Run Text="{Binding build}"/>
			<Run Text="For testing purposes only"/>
		</TextBlock>
		<Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="2" Padding="3" Margin="3">
			<StackPanel>
				<Button Content="Menu" Width="48" Height="26" Padding="3"/>
			</StackPanel>
		</Border>
	</StackPanel>
</Window>